<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/cartMovieImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/cartMovieName"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cartMovieImage"
        android:layout_marginLeft="10dp"
        android:textSize="13dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:id="@+id/removefromcartButton"
        android:layout_below="@+id/cartMovieName"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MediumText"
        android:id="@+id/cartMoviePrice"
        android:layout_alignBottom="@+id/removefromcartButton"
        android:layout_alignStart="@+id/cartMovieName"
        android:textSize="13dp" />

    <Spinner
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/cartMovieQty"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/removefromcartButton"
        android:layout_toStartOf="@+id/removefromcartButton" />
</RelativeLayout>